{
  "name": "esignature-portal",
  "version": "1.0.0",
  "description": "eSignature Portal - Document signing application",
  "private": true,
  "license": "ISC",
  "author": "",
  "scripts": {
    "// Next.JS": "",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "// Testing": "",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test": "npm run test:coverage && npm run test:e2e",
    "// Linters & Formatters": "",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
